# Application Configuration
PORT=8079
SERVICE_NAME=front-end

# Redis Configuration (for session storage)
SESSION_REDIS=true
REDIS_HOST=session-db
REDIS_PORT=6379

# Jaeger Tracing Configuration
# Using Zipkin-compatible HTTP endpoint (port 9411)
ZIPKIN_HOST=jaeger-collector.observability.svc.cluster.local
ZIPKIN_PORT=9411
ZIPKIN_BASE_URL=http://jaeger-collector.observability.svc.cluster.local:9411

# Alternative: use zipkin_host variable (Spring Boot style)
# zipkin_host=jaeger-collector.observability.svc.cluster.local

# For local development with Jaeger all-in-one:
# ZIPKIN_HOST=localhost
# ZIPKIN_PORT=9411
# ZIPKIN_BASE_URL=http://localhost:9411

# Fault injection settings (optional)
FAULTS_ENABLED=false
FAULT_FE_TYPEERROR_ENABLED=false
FAULTS_FE_TYPEERROR_ALWAYS=false
FAULT_FE_ERROR_ENABLED=false
FAULTS_FE_ERROR_ALWAYS=false
FAULT_FE_SLEEP_ENABLED=false
FAULT_FE_SLEEP_REQUIRE_HEADER=false
FAULT_FE_SLEEP_PCT=10
FAULT_FE_SLEEP_MS=2000
